# VaulTLS Development Configuration (SQLite)

# Database Configuration
VAULTLS_DB_SECRET=your_secure_database_secret_here

# Database Backend Selection (SQLite for development)
VAULTLS_DATABASE_BACKEND=sqlite

# SQLite Configuration (uses local file database)
# No additional PostgreSQL configuration needed

# API Configuration
VAULTLS_API_SECRET=your_secure_api_secret_here

# Network Configuration
VAULTLS_BACKEND_PORT=8000
VAULTLS_FRONTEND_PORT=4000
HTTP_PORT=80
BACKEND_API_PORT=8000

# Development Configuration
RUN_TESTS=false

# Performance Configuration
ROCKET_ADDRESS=0.0.0.0
ROCKET_PORT=8000
ROCKET_KEEP_ALIVE=30
ROCKET_WORKERS=4

# Application Settings
VAULTLS_SETTINGS_PATH=/app/settings

# Development Configuration
# Set to true to run tests during build (increases build time significantly)
RUN_TESTS=false


# Production SSL/HTTPS Configuration (when ready)
# SSL_CERT_PATH=/path/to/ssl/cert.pem
# SSL_KEY_PATH=/path/to/ssl/private.key

# Backup Configuration
# BACKUP_SCHEDULE=0 0 * * *
# BACKUP_RETENTION_DAYS=30
